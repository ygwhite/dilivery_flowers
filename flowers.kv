#:kivy 2.1.0
#:import Label kivy.uix.label.Label
#:import Button kivy.uix.button.Button

<FlowerDelivery>:
    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'Каталог'
            content: root.on_press_flower(self)
        TabbedPanelItem:
            text: "Корзина"
            on_press: root.on_press_cart(self)
        TabbedPanelItem:
            text: "Мой аккаунт"
            Screen:
                BoxLayout:
                    Label:
                        id: Username
                        text: "Новый пользователь"
                        size_hint: (0.5, 0.25)
                        #pos_hint: {'center_x': 0.5, 'center_y': 1}
                    Button:
                        text: "Войти"
                        on_press: root.manager.current = 'log_menu'
                        size_hint: (0.5, 0.25)
                        #pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<LoginScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Ждём тебя"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextField:
            mode: "round"
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            mode: "round"
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Log In"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()

        MDRoundFlatButton:
            text: "Registration"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = 'register_menu'
        MDRoundFlatButton:
            text: "Back to flowers magazine"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = 'flower_app'

        Widget:
            size_hint_y: None
            height: 2

